<h1>Incidencias</h1>
<div><%= will_paginate @incidences %></div>
<table>
  <thead>
    <tr>
      <th>Ticket</th>
      <th>foto</th>
      <th>Descripcion</th>
      <th>Referencia</th>
      <th>Fecha y hora</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incidences.each do |incidence| %>
      <tr>
        <td><%= incidence.id %></td>
        <td><%= image_tag incidence.picture,width:200 %></td>
        <td><%= incidence.description %></td>
        <td><%= incidence.reference %></td>
        <td><%= incidence.created_at %></td>
        <td><%= incidence.latitud %></td>
        <td><%= incidence.longitud %></td>
        <td><%= link_to 'Ver', incidence %></td>
        <td><%= link_to 'Editar', edit_incidence_path(incidence) %></td>
        <td><%= link_to 'Eliminar', incidence, method: :delete, data: { confirm: 'Esta seguro en eliminar la incidencia?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


