<h1>Lista de motivos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Activo</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @motives.each do |motive| %>
      <tr>
        <td><%= motive.name %></td>
        <td><%= motive.status %></td>
        <td><%= link_to 'Editar', edit_motive_path(motive) %></td>
        <td><%= link_to 'Eliminar', motive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear', new_motive_path %>
